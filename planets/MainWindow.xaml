<Window x:Class="planets.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:planets"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Grid>
            <DataGrid Name="datagrid" ItemsSource="{Binding }" CellEditEnding="datagrid_CellEditEnding" AutoGenerateColumns="False" CanUserAddRows="False" >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id"  Binding="{Binding id}" IsReadOnly="True" Width="1*"/>
                    <DataGridTextColumn Header="Name" Binding="{Binding name}" Width="1*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <UniformGrid Grid.Column="1" Columns="1">
            <Button Name="AddPlanetButton" Click="AddPlanetButton_Click">New Planet</Button>
            <Button Name="RemovePlanetButton" Click="RemovePlanetButton_Click">Remove Selected Planet</Button>
            <Button Name="AddPropertyButton" Click="AddPropertyButton_Click">Add Property</Button>
            <Button Name="RemoveButton" Click="RemoveButton_Click">Remove Property</Button>
            <Button Name="FilterButton" Click="FilterButton_Click">Filter</Button>

        </UniformGrid>
        <Popup Name="AddPropertyPopup" >
            <UniformGrid Columns="5" Background="WhiteSmoke">
                <TextBlock   FontSize="18"  Margin="10">Name: </TextBlock>
                <TextBox Name="AddPropertyTextBox" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <TextBlock   FontSize="18"  Margin="10">Type:</TextBlock>
                <ComboBox  Name="AddPropertyTypeComboBox" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <UniformGrid Rows="2">
                    <Button Click="AddProperty_OK" >OK</Button>
                    <Button Click="AddProperty_Cancel" >Cancel</Button>
                </UniformGrid>
            </UniformGrid>
        </Popup>
        <Popup Name="RemovePropertyPopup" >
            <UniformGrid Columns="3" Background="WhiteSmoke">
                <TextBlock   FontSize="18"  Margin="10" >Name:</TextBlock>
                <ComboBox DisplayMemberPath="name" Name="RemovePropertyComboBox" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <UniformGrid Rows="2">
                    <Button Click="RemoveProperty_OK" >OK</Button>
                    <Button Click="RemoveProperty_Cancel" >Cancel</Button>
                </UniformGrid>
                

            </UniformGrid>
        </Popup>
        <Popup Name="FilterPopup" >
            <UniformGrid Columns="5" Background="WhiteSmoke">
                <TextBlock   FontSize="18"  Margin="10">Name:</TextBlock>
                <ComboBox DisplayMemberPath="name" Name="FilterComboBox" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <TextBlock   FontSize="18"  Margin="10">Value:</TextBlock>
                <TextBox Name="filterTextBox" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <UniformGrid Rows="2">
                    <Button Click="Filter_OK" >OK</Button>
                    <Button Click="Filter_Cancel" >Cancel</Button>
                </UniformGrid>


            </UniformGrid>
        </Popup>
    </Grid>
</Window>
